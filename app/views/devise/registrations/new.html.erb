<div class="row">
  <div class="small-12 columns text-center"><h1>Sign up</h1></div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row" id="registration">
    <div class="text-right">

    <div class="field small-3 columns">
      <%= f.label :first_name, "First Name" %>
    </div>
    <div class="field small-8 columns">
    <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :last_name, "Last Name" %>
    </div>
    <div class="field small-8 columns">
    <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :username %>
    </div>
    <div class="field small-8 columns">
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :email %>
    </div>
    <div class="field small-8 columns">
    <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <% end %>
    </div>
    <div class="field small-8 columns">
      <%= f.password_field :password, autocomplete: "off", placeholder: "6 characters minimum"  %>
    </div>

    <br>
    <div class="field small-3 columns">
      <%= f.label :password_confirmation, "Confirm Password" %>
    </div>
    <div class="field small-8 columns">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "6 characters minimum" %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :city, "Home City" %>
    </div>
    <div class="field small-8 columns">
      <%= f.text_field :city, autofocus: true %>
    </div>

    <div class="field small-3 columns">
      <%= f.label :state %>
    </div>
    <div class="field small-8 columns">
      <%= f.text_field :state, autofocus: true %>
    </div>
    <br>

    <div class="field small-3 columns">
      <%= f.label :avatar %>
    </div>
    <div class="field small-9 columns">
    <%= f.file_field :avatar %>
    </div>
</div>

<div class="create-account small-12 columns">
  <div class="actions">
    <%= f.submit "Create Account" %>
  </div>


  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
